<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="fill_parent" android:background="#FFFFFFFF" android:layout_height="fill_parent">     

 	<ScrollView android:layout_height="fill_parent" android:id="@+id/scrollView1"  android:layout_width="fill_parent">
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:background="#FFFFFFFF" android:layout_height="fill_parent">     
		
			<RelativeLayout android:id="@+id/RelativeLayout04" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@layout/header_blue">
				<TextView android:text="TextView" android:id="@+id/nameText" 
			          	  android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textSize="12pt" android:paddingLeft="5dp">
				</TextView>
				<TextView android:text="TextView" android:id="@+id/usageText" android:layout_below="@+id/nameText"
			    	      android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textSize="8pt" android:paddingLeft="5dp">
			   </TextView>
			</RelativeLayout>
		    
			<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent"  android:layout_height="fill_parent" >
				<!-- garage texts hidden --> 
				<TextView android:text="This is the address and description of the garage (in brackets)" android:id="@+id/addressText" android:textColor="#000000" 
			              android:layout_below="@+id/usageText" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textSize="8pt" android:padding="5dp"
			              android:visibility="gone">
			    </TextView>
				<TextView android:text="Garage Phone Number" android:id="@+id/phoneText" android:layout_below="@+id/addressText" android:textColor="#000000" android:autoLink="all"
			              android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="8pt" android:padding="5dp" android:phoneNumber="true"
			              android:visibility="gone">
			    </TextView>
		 		<LinearLayout android:layout_width="fill_parent" android:id="@+id/detailLinearLayout" android:layout_below="@+id/phoneText" android:layout_height="fill_parent">
		 		</LinearLayout>
			</RelativeLayout>
			
 		</LinearLayout>
 	</ScrollView>
 	
 </LinearLayout>